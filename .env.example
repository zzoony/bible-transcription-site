# Environment Variables for Bible Transcription Database

# Local PostgreSQL (Docker)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=bible_transcription
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=localdev123

# Supabase Configuration (Production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_DB_URL=https://your-project.supabase.co

# Claude API (for analysis)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Application Settings
NODE_ENV=development
BATCH_SIZE=10
PARALLEL_AGENTS=5
LOG_LEVEL=info

# Database Migration
MIGRATION_MODE=local # local or supabase