{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@bible/database": ["../../packages/database"]
    }
  },
  "include": ["scripts/**/*", "docs/**/*"],
  "exclude": ["node_modules", "dist"]
}
